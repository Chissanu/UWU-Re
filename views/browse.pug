doctype html
html
  head
    title Browse
    script(type='text/javascript', src='http://code.jquery.com/jquery-latest.min.js')
    script(src='./js/bootstrap.min.js')
    script(src='./socket.io/socket.io.js')
    script(src='https://kit.fontawesome.com/a076d05399.js')
    i.fasfa-user-alt
    script
      include js/orderDrink.js

  body
    mixin drinkItems(drinkData,itemID,top,userID)
        .item(id="item" + itemID style="top:" + top + "px")
            form(action='/api/orderDrink' method='post')
            h1.h1=drinkData.drinkname
            h1.h1(style='left:590px')="THB:" + drinkData.price
            h2.h2="Created by:" + drinkData.creator
            h2.h2(style='top:120px')="Ingredient 1: " + drinkData.ingredientlist[0]
            h2.h2(style='top:170px')="Ingredient 2: " + drinkData.ingredientlist[1] 
            h2.h2(style='top:220px')="Ingredient 3: " + drinkData.ingredientlist[2]
            h2.h2(style='top:270px')="Ingredient 4: " + drinkData.ingredientlist[3]
            h2.h2(style='top:320px')="Ingredient 5: " + drinkData.ingredientlist[4]
            h2.h2(style='top:370px')="Ingredient 6: " + drinkData.ingredientlist[5]
            //- button(id="order" + itemID onClick='orderDrink('+ itemID +')') Order
            button(id="order" + itemID type="submit" onClick='orderDrink(' + '"' + itemID + '"' + ',' + '"' + userID + '"' + ')') Order
    #main-rec
        h1#browseLabel Browse
        #inner-rec
            input#searchBox(type='text', placeholder='Search')
            - var top=100
            //- - var userID=userObj.userid
            - var userID=10
            - for (var i = 0; i < drinks.length; ++i) {
            +drinkItems(drinks[i],i+1,top,userID)
            - top += 550
            - }

    style.
      @media screen and (max-width: 1000px) {
      body {
      background: #859FFD;
      }
      #main-rec {
      position: absolute;
      left: 4.34%;
      right: 4.25%;
      top: 13.61%;
      bottom: 17.28%;
      background: #FFF89A;
      border-radius: 10px;
      }
      #inner-rec {
      position: absolute;
      left: 2.54%;
      right: 2.41%;
      top: 10%;
      bottom: 5%;
      background: #DDD4A2;
      border-radius: 10px;
      overflow: hidden;
      overflow-y: scroll;
      }
      .item {
      position: absolute;
      width: 810px;
      height: 500px;
      left: 20px;
      top: 100px;
      background: #FF8787;
      box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.25);
      border-radius: 20px;
      }
      .item h1 {
      position: absolute;
      font-size: 60px;
      left: 30px;
      top: -20px;
      color: white;
      }
      .item h2 {
      position: absolute;
      align-items: left;
      font-size: 50px;
      left: 30px;
      top: 50px;
      font-weight: normal;
      color: white;
      }
      .item button {
      position: absolute;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 5px 20px;
      gap: 10px;
      width: 140px;
      height: 50px;
      left: 650px;
      top: 430px;
      background: #058ED9;
      color: white;
      font-size: 30px;
      border: 20px;
      box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.25);
      border-radius: 20px;
      }
      #browseLabel {
      /* Browse */
      position: absolute;
      width: 156px;
      height: 60px;
      left: 330px;
      top: 0px;
      font-family: 'Poppins';
      font-style: normal;
      font-weight: 600;
      font-size: 80px;
      line-height: 60px;
      /* identical to box height */
      text-align: center;
      letter-spacing: 0.04em;
      color: #000000;
      }
      #searchBox {
      position: absolute;
      width: 350px;
      height: 50px;
      font-size: 40px;
      top: 20px;
      left: 25px;
      border: none;
      border-radius: 15px;
      }
      }

