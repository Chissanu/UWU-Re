doctype html
head
  title Log in
#name
  h1#uwu UwU:
  h1#re Re
hr#whiteLine
#login
  form(action='/api/login' method='post')
    label#Label(for='username') Username:
    input#nameInput(type='text' name='username')
    br
    br
    br
    label#Label(for='username') Password:
    br
    input#passInput(type='password' name='userpass')
    br
    input#submit(type='submit' value='Login')
  button#register(type='button' onclick="location.href = '/register'") Register

style.
  @media screen and (max-width: 1000px) {
        body {
            background: #859FFD;
        }
        #name {
            text-align: center;
            margin-top: 500px;  
        }
        #uwu {
            color: rgb(255, 255, 255);
            display: inline;
            font-size: 200px;
        }
        #re {
            color: rgb(0, 0, 0);
            display: inline;
            font-size: 200px;
        }
        #whiteLine {
            height: 10px;
            width: 80%;
            background-color: #ffffff;
        }
        #login {
            margin-top: 100px;
            margin-left: 140px;
        }
        #nameInput {
            height: 80px;
            width: 80%;
            font-size: 80px;
        }
        #Label {
            display: inline;
            width: 200px;
            font-size: 80px;
            color: white;
        }
        #passInput {
            height: 80px;
            width: 80%;
            font-size: 80px;
        }
        #submit {
            height: 150px;
            width: 350px;
            position: absolute;
            font-size: 70px;
            border-radius: 50px;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.25);
            left:300px;
            top: 1800px;
        }
        #register {
            height: 150px;
            width: 350px;
            position: absolute;
            font-size: 70px;
            border-radius: 50px;
            box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.25);
            left:300px;
            top: 1500px;
        }
    }